<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.depavlo.gitlaberfx.controller.DatePickerController"
      spacing="10">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label text="Виберіть крайню дату:"/>
    
    <DatePicker fx:id="datePicker"/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="OK" onAction="#confirm" defaultButton="true"/>
        <Button text="Скасувати" onAction="#cancel" cancelButton="true"/>
    </HBox>
    
</VBox> 