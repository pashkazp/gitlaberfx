<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.depavlo.gitlaberfx.controller.DateSelectorController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Date Range Selection -->
    <GridPane hgap="10" vgap="10">
        <Label prefWidth="100.0" text="%date.selector.after" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <DatePicker fx:id="dateAfterPicker" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label prefWidth="100.0" text="%date.selector.before" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <DatePicker fx:id="dateBeforePicker" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <!-- Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button defaultButton="true" onAction="#confirm" text="%date.selector.ok" />
        <Button cancelButton="true" onAction="#cancel" text="%date.selector.cancel" />
    </HBox>
</VBox>
