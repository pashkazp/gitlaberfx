<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.depavlo.gitlaberfx.controller.DateSelectorController"
      spacing="15"
      alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Date Range Selection -->
    <GridPane hgap="10" vgap="10">
        <Label text="%date.selector.after" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateAfterPicker" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="%date.selector.before" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateBeforePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="%date.selector.ok" onAction="#confirm" defaultButton="true"/>
        <Button text="%date.selector.cancel" onAction="#cancel" cancelButton="true"/>
    </HBox>
</VBox>
