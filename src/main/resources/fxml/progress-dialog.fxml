<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.depavlo.gitlaberfx.controller.ProgressDialogController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    
    <Label fx:id="messageLabel" text="Операція виконується..." />
    <ProgressBar fx:id="progressBar" prefWidth="300" progress="-1.0" />
    <Label fx:id="detailsLabel" text="" />
    
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="cancelButton" onAction="#handleCancel" text="Скасувати" />
        <Button fx:id="forceStopButton" onAction="#handleForceStop" text="Примусово зупинити" />
    </HBox>
</VBox>